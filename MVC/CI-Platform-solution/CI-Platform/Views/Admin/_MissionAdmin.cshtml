                    <span class="sr-only"></span>
                </a>
            </li>
            @for(int i = 1; i <= @ViewBag.totalPages; i++){
            
                <li class="page-item" onclick="AdminSearch(3,@i)"><a class="page-link" href="#">@i</a></li>
