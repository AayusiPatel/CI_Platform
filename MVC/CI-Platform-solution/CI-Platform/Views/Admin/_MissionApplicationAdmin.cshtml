@{
}
@using CI_Platform.Entities.ViewModels
@model AdminViewModel

<div id="cmspage">
    <table class="table mt-3">
        <tbody>
            <tr style="background-color: #F8F9FC;">
                <th scope="col">Mission title</th>
                <th scope="col">MissionId</th>
                <th scope="col">User Id</th>
                <th scope="col">User Name</th>
                <th scope="col">Applied Date</th>
                <th scope="col">Actions</th>
            </tr>
            @foreach (var item in Model.missionApplications)
            {
                <tr>
                    <td>@item.Mission.Title</td>
                    <td>@item.MissionId</td>
                    <td>@item.UserId</td>
                    <td>@item.User.FirstName  @item.User.LastName </td>
                    <td>@item.AppliedAt.ToShortDateString()</td>
                    <td>
                        @if (item.ApprovalStatus == "Approve")
                        {
                            <button type="button" id="A4(@item.MissionApplicationId" class="btn p-0 me-3" onclick="approval(@item.MissionApplicationId,1,4)" disabled>
                                <i class="bi bi-check-circle" style="color: green;"></i>
                            </button>
                        }
                        else{
                        <button type="button" id="A4(@item.MissionApplicationId" class="btn p-0 me-3" onclick="approval(@item.MissionApplicationId,1,4)">
                            <i class="bi bi-check-circle" style="color: green;"></i>

                        </button>
                        }
                        @if (item.ApprovalStatus == "Decline")
                        {
                              <button type="button" id="D4(@item.MissionApplicationId" class="btn p-0 me-3" onclick="approval(@item.MissionApplicationId,0,4)" disabled>
                            <i class="bi bi-x-circle" style="color: red;"></i>
                        </button>
                        }
                        else{
                        <button type="button" id="D4(@item.MissionApplicationId" class="btn p-0 me-3" onclick="approval(@item.MissionApplicationId,0,4)">
                            <i class="bi bi-x-circle" style="color: red;"></i>
                        </button>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <nav aria-label="Page navigation example">
        <ul class="pagination justify-content-end">
            <li class="page-item">
                <a class="page-link" href="#" aria-label="Previous">
                    <span aria-hidden="true">&laquo;</span>
                    <span class="sr-only"></span>
                </a>
            </li>
            @for (int i = 1; i <= Model.mApplicationPages; i++)
            {

                <li class="page-item" onclick="AdminSearch(4,@i)"><a class="page-link" href="#">@i</a></li>
            }
            <li class="page-item">
                <a class="page-link" href="#" aria-label="Next">
                    <span aria-hidden="true">&raquo;</span>
                    <span class="sr-only"></span>
                </a>
            </li>
        </ul>
    </nav>
</div>
